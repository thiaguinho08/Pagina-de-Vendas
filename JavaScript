
  
  // Função para buscar produtos pelo nome
  function buscarProduto(nome) {
    return produtos.filter(produto => produto.nome.toLowerCase().includes(nome.toLowerCase()));
  }
  
  // Exemplo de uso
  const nomeBusca = prompt("Digite o nome do produto que você deseja buscar:");
  
  const resultados = buscarProduto(nomeBusca);
  
  if (resultados.length > 0) {
    console.log("Resultados encontrados:");
    resultados.forEach(produto => {
      console.log(`Nome: ${produto.nome}`);
      console.log(`Preço: R$${produto.preço.toFixed(2)}`);
      console.log(`Descrição: ${produto.descrição}`);
      console.log('---');
    });
  } else {
    console.log("Nenhum produto encontrado.");
  }
  
